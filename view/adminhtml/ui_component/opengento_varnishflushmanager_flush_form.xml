<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">opengento_varnishflushmanager_flush_form.flush_form_data_source</item>
		</item>
		<item name="label" xsi:type="string" translate="true">General Information</item>
		<item name="template" xsi:type="string">templates/form/collapsible</item>
	</argument>
	<settings>
		<buttons>
			<button name="back" class="Opengento\VarnishFlushManager\Block\Adminhtml\Flush\Edit\BackButton"/>
			<button name="delete" class="Opengento\VarnishFlushManager\Block\Adminhtml\Flush\Edit\DeleteButton"/>
			<button name="save" class="Opengento\VarnishFlushManager\Block\Adminhtml\Flush\Edit\SaveButton"/>
			<button name="save_and_continue" class="Opengento\VarnishFlushManager\Block\Adminhtml\Flush\Edit\SaveAndContinueButton"/>
		</buttons>
		<namespace>opengento_varnishflushmanager_flush_form</namespace>
		<dataScope>data</dataScope>
		<deps>
			<dep>opengento_varnishflushmanager_flush_form.flush_form_data_source</dep>
		</deps>
	</settings>
	<dataSource name="flush_form_data_source">
		<argument name="data" xsi:type="array">
			<item name="js_config" xsi:type="array">
				<item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
			</item>
		</argument>
		<settings>
			<submitUrl path="*/*/save"/>
		</settings>
		<dataProvider name="flush_form_data_source" class="Opengento\VarnishFlushManager\Model\Flush\DataProvider">
			<settings>
				<requestFieldName>flush_id</requestFieldName>
				<primaryFieldName>flush_id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<fieldset name="general">
		<settings>
			<label>General</label>
		</settings>
		<field name="tags" formElement="textarea" sortOrder="20">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Flush</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">tags</label>
				<dataScope>tags</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="stack" formElement="textarea" sortOrder="30">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Flush</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">stack</label>
				<dataScope>stack</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
		<field name="context" formElement="textarea" sortOrder="40">
			<argument name="data" xsi:type="array">
				<item name="config" xsi:type="array">
					<item name="source" xsi:type="string">Flush</item>
				</item>
			</argument>
			<settings>
				<dataType>text</dataType>
				<label translate="true">context</label>
				<dataScope>context</dataScope>
				<validation>
					<rule name="required-entry" xsi:type="boolean">false</rule>
				</validation>
			</settings>
		</field>
	</fieldset>
</form>
